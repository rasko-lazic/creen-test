root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[{node_modules,vendor}/**]
indent_style = ignore
indent_size = ignore
tab_width = ignore
end_of_line = ignore
charset = ignore
trim_trailing_whitespace = ignore
insert_final_newline = ignore

[*.php]
indent_style = space
indent_size = 4

[*.blade.php]
indent_style = space
indent_size = 2

[*.{js,vue,html,scss,less,css,json}]
indent_style = space
indent_size = 2
